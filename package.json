{
  "name": "fintech-crypto-wallet",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "ts-node scripts/start-system.ts",
    "start:dev": "ts-node-dev --respawn scripts/start-system.ts",
    "check": "ts-node scripts/check-status.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "deploy:contract": "hardhat run scripts/deploy-mainnet.ts --network mainnet",
    "verify:contract": "hardhat verify --network mainnet",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "prepare": "husky install",
    "status": "ts-node scripts/check-status.ts",
    "deploy:polygon": "hardhat run scripts/deploy-mainnet.ts --network polygon",
    "deploy:bsc": "hardhat run scripts/deploy-mainnet.ts --network bsc"
  },
  "dependencies": {
    "@fintech-crypto/common": "file:packages/common",
    "ethers": "^6.7.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@openzeppelin/contracts-upgradeable": "^4.9.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.0",
    "@openzeppelin/hardhat-upgrades": "^2.5.0",
    "@types/chai": "^4.3.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "solidity-coverage": "^0.8.6",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}