{
  "name": "crypto-wallet-whatsapp",
  "version": "1.0.0",
  "description": "Fintech Crypto Wallet com WhatsApp",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:admin\" \"npm run dev:auth\" \"npm run dev:services\"",
    "dev:admin": "cd crypto-wallet-admin && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:services": "concurrently \"npm run dev:wallet\" \"npm run dev:kyc\" \"npm run dev:liquidity\" \"npm run dev:notification\"",
    "dev:wallet": "cd services/wallet-service && npm run dev",
    "dev:kyc": "cd services/kyc && npm run dev",
    "dev:liquidity": "cd services/liquidity && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    "install:all": "concurrently \"npm run install:admin\" \"npm run install:services\"",
    "install:admin": "cd crypto-wallet-admin && npm install",
    "install:services": "concurrently \"cd services/auth-service && npm install\" \"cd services/wallet-service && npm install\" \"cd services/kyc && npm install\" \"cd services/liquidity && npm install\" \"cd services/notification-service && npm install\"",
    "build": "concurrently \"npm run build:admin\" \"npm run build:services\"",
    "build:admin": "cd crypto-wallet-admin && npm run build",
    "build:services": "concurrently \"cd services/auth-service && npm run build\" \"cd services/wallet-service && npm run build\" \"cd services/kyc && npm run build\" \"cd services/liquidity && npm run build\" \"cd services/notification-service && npm run build\"",
    "start": "./scripts/start-system.sh",
    "stop": "./scripts/stop-system.sh",
    "restart": "./scripts/stop-system.sh && ./scripts/start-system.sh",
    "status": "./scripts/status.sh",
    "logs": "./scripts/logs.sh",
    "start:win": "scripts\\start-system.bat",
    "stop:win": "scripts\\stop-system.bat",
    "logs:win": "scripts\\logs.bat"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.6.2",
    "chai": "^6.2.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.7.4",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
