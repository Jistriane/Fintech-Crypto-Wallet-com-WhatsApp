# Notus API Configuration
# Obtenha suas credenciais em: https://docs.notus.team/docs/guides

# API Credentials
NOTUS_API_KEY=your_notus_api_key_here
NOTUS_SECRET_KEY=your_notus_secret_key_here
NOTUS_WEBHOOK_SECRET=your_notus_webhook_secret_here

# API Configuration
NOTUS_BASE_URL=https://api.notus.team/v1
NOTUS_ENVIRONMENT=production
NOTUS_DEBUG=false

# Webhook Configuration
NOTUS_WEBHOOK_URL=https://your-app.com/webhooks/notus
NOTUS_WEBHOOK_EVENTS=transaction.completed,transaction.failed,wallet.created,kyc.verified

# Chain Configuration
NOTUS_DEFAULT_CHAIN_ID=1
NOTUS_SUPPORTED_CHAINS=1,137,56,42161,10,8453,43114

# Feature Flags
NOTUS_ACCOUNT_ABSTRACTION=true
NOTUS_SMART_WALLETS=true
NOTUS_GASLESS_TRANSACTIONS=true
NOTUS_SOCIAL_LOGIN=true
NOTUS_CROSS_CHAIN_SWAPS=true
NOTUS_LIQUIDITY_POOLS=true
NOTUS_KYC_VERIFICATION=true
NOTUS_WEBHOOKS=true
NOTUS_ANALYTICS=true

# Security Configuration
NOTUS_ENCRYPTION_ALGORITHM=AES-256
NOTUS_SIGNATURE_ALGORITHM=ECDSA
NOTUS_WEBHOOK_SIGNATURE=HMAC-SHA256
NOTUS_RATE_LIMIT_REQUESTS=1000
NOTUS_RATE_LIMIT_WINDOW=3600

# Social Login Providers
NOTUS_GOOGLE_CLIENT_ID=your_google_client_id
NOTUS_GOOGLE_CLIENT_SECRET=your_google_client_secret
NOTUS_APPLE_CLIENT_ID=your_apple_client_id
NOTUS_APPLE_CLIENT_SECRET=your_apple_client_secret

# KYC Configuration
NOTUS_KYC_PROVIDER=notus
NOTUS_KYC_LEVEL=enhanced
NOTUS_KYC_AUTO_APPROVE=false

# Analytics Configuration
NOTUS_ANALYTICS_ENABLED=true
NOTUS_ANALYTICS_RETENTION_DAYS=365
NOTUS_ANALYTICS_EVENTS=transaction,wallet,kyc,defi

# Error Handling
NOTUS_RETRY_ATTEMPTS=3
NOTUS_RETRY_DELAY=1000
NOTUS_TIMEOUT=30000

# Logging
NOTUS_LOG_LEVEL=info
NOTUS_LOG_FORMAT=json
NOTUS_LOG_FILE=logs/notus-api.log
