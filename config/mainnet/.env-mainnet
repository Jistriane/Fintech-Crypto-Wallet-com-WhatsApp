# ===========================================
# CONFIGURAÇÃO PARA MAINNET - PRODUÇÃO
# ===========================================

# ===========================================
# SEGURANÇA CRÍTICA - ALTERAR ANTES DO DEPLOY
# ===========================================

# Chaves de segurança - GERAR NOVAS CHAVES FORTES
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_STRING_AT_LEAST_64_CHARS
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_STRING_AT_LEAST_64_CHARS
MASTER_KEY=CHANGE_THIS_TO_A_VERY_STRONG_MASTER_KEY_AT_LEAST_128_CHARS
ENCRYPTION_KEY=CHANGE_THIS_TO_A_STRONG_ENCRYPTION_KEY_32_CHARS

# ===========================================
# BANCO DE DADOS - CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# PostgreSQL - Configurações seguras
DATABASE_URL=postgresql://fintech_user:STRONG_PASSWORD_HERE@db-mainnet:5432/fintech_mainnet
REDIS_URL=redis://:STRONG_REDIS_PASSWORD@redis-mainnet:6379

# ===========================================
# BLOCKCHAIN - MAINNET CONFIGURATIONS
# ===========================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETHEREUM_CHAIN_ID=1

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_CHAIN_ID=137

# BSC Mainnet
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_CHAIN_ID=56

# ===========================================
# WHATSAPP API - NOTUS
# ===========================================

# Configurações do WhatsApp
NOTUS_API_KEY=YOUR_NOTUS_API_KEY_HERE
NOTUS_WEBHOOK_URL=https://api.yourdomain.com/webhook/notus
WHATSAPP_API_URL=https://api.notus.com.br
WHATSAPP_API_TOKEN=YOUR_WHATSAPP_TOKEN_HERE

# ===========================================
# RATE LIMITING - CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# Rate limiting mais restritivo para produção
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===========================================
# MONITORAMENTO E LOGS
# ===========================================

# Sentry para monitoramento de erros
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
LOG_LEVEL=warn

# Prometheus e Grafana
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# ===========================================
# API GATEWAY - KONG
# ===========================================

KONG_ADMIN_URL=http://kong-admin:8001
KONG_PROXY_URL=http://kong-proxy:8000

# ===========================================
# CONFIGURAÇÕES DE REDE
# ===========================================

# CORS - Configurações de produção
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
CORS_CREDENTIALS=true

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA AVANÇADA
# ===========================================

# Headers de segurança
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_NO_CACHE_ENABLED=true

# ===========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ===========================================

# Pool de conexões
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE=10000

# Cache
REDIS_TTL=3600
CACHE_ENABLED=true

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================

# Backup automático
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURAÇÕES DE ALERTAS
# ===========================================

# Alertas de sistema
ALERT_EMAIL=admin@yourdomain.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ===========================================
# CONFIGURAÇÕES DE COMPLIANCE
# ===========================================

# LGPD/GDPR
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
PRIVACY_MODE=true

# ===========================================
# CONFIGURAÇÕES DE DEPLOY
# ===========================================

# Ambiente
NODE_ENV=production
ENVIRONMENT=mainnet

# Portas dos serviços
AUTH_PORT=3333
WALLET_PORT=3334
KYC_PORT=3335
LIQUIDITY_PORT=3336
NOTIFICATION_PORT=3337
ADMIN_PORT=3000

# ===========================================
# CONFIGURAÇÕES DE TESTE
# ===========================================

# Desabilitar em produção
TEST_MODE=false
MOCK_DATA=false
DEBUG_MODE=false
